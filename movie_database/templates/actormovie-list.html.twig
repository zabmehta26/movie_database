<table class="table table-striped">
  <tr>
  <th> Movie </th>
  <th> Description </th>
  <th> Poster </th>
  <th> Ratings </th>
  <th> Co-actors </th>
  {% for item in items %}
    <tr>
    <td>
        {{ item.name }}

    </td>
    <td> {{ item.des|render|striptags }}</td>
    <td> <img src = {{ item.poster }} width=100 > </td>
    <td>{% for star in range(1,item.ratings) %}
    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
    {% endfor %}
   <td>
    <td>
    {% for x in item.costars %}
          <a href="#" class="costar-link" data-nid={{ x.nid }} data-toggle="modal" data-target="#myModal" movie-nid={{ item.nid }}>{{ x.name }}</a><br>
        {% endfor %}
    </td>
    </tr>
  {% endfor %}
</table>

<!-- Modal content-->

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <img class="mx-auto" width=150px><hr>
        <p></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

</div>
